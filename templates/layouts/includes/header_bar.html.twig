<div class="btn-group btn-user">
	{% if app.user.id is defined %}
		<button type="button" class="btn btn-profil dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			Mon profil
		</button>
	{% else %}
		<button type="button" class="btn btn-profil dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			Se connecter
		</button>
	{% endif %}
	<div class="dropdown-menu dropdown-menu-right">
		{% if app.user == null %}
			<a class="dropdown-item"  href="{{path('app_login')}}" class="dropdown-item">Connexion</a>
			<a class="dropdown-item"  href="{{path('app_register')}}" class="dropdown-item">S'enregistrer</a>
		{% endif %}
		{% if app.user.status is defined %}
			{% if app.user.status[0] == "En attente" %}
				<a class="dropdown-item"  href="{{path('user_show', { 'id': 'me' })}}" class="dropdown-item">Votre profil</a>
				<a class="dropdown-item"  href="{{path('app_logout')}}" class="dropdown-item">Déconnexion</a>
			{% endif %}
			{% if app.user.status[0] == "Membre" %}
				<a class="dropdown-item"  href="{{path('user_show', { 'id': 'me' })}}" class="dropdown-item">Votre profil</a>
				<a class="dropdown-item" href="{{path('app_members_news')}}">Messages pour les membres</a>
				<a class="dropdown-item"  href="{{path('app_logout')}}" class="dropdown-item">Déconnexion</a>
			{% endif %}
			{% if app.user.roles[0] == "ROLE_ASSEMBLY"%}
				<a class="dropdown-item"  href="{{path('user_show', { 'id': 'me' })}}" class="dropdown-item">Votre profil</a>
				<a class="dropdown-item" href="{{path('app_members_news')}}">Messages pour les membres</a>
				<a class="dropdown-item" href="{{path('app_assembly_news')}}">Messages pour l'assembléee</a>
				<a class="dropdown-item"  href="{{path('app_logout')}}" class="dropdown-item">Déconnexion</a>
			{% endif %}
			{% if app.user.isAdmin %}
				<a class="dropdown-item"  href="{{path('user_show', { 'id': 'me' })}}" class="dropdown-item">Votre profil</a>
				<a class="dropdown-item"  href="{{path('admin_dashboard')}}" class="dropdown-item">Panneau admin</a>
				<a class="dropdown-item" href="{{path('app_members_news')}}">Messages pour les membres</a>
				<a class="dropdown-item" href="{{path('app_assembly_news')}}">Messages pour l'assembléee</a>
				<a class="dropdown-item"  href="{{path('app_logout')}}" class="dropdown-item">Déconnexion</a>
			{% endif %}
		{% endif %}

	</div>
</div>
