{% extends 'base.html.twig' %}

{% block title %}Catégorie
{% endblock %}

{% block body %}
	<h1>Catégorie</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ category.title }}</td>
			</tr>
		</tbody>
	</table>
	<div class="row row-nav my-3">
		<div class="col">
			<button class="btn btn-primary">
				<a href="{{ path('category_index') }}">Retour a la liste</a>
			</button>
		</div>
		<div class="col">
			<button class="btn btn-primary">
				<a href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>
			</button>
		</div>
		<div class="col">
			{{ include('category/_delete_form.html.twig') }}
		</div>
	</div>


{% endblock %}
