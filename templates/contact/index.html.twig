{% extends 'base.html.twig' %}

{% form_theme form_contact 'bootstrap_4_layout.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="row justify-content-center">
		<div class="col-md-8">
			<div class="form">
				{{ form_start(form_contact) }}
				<h2 class="text-center">Formulaire de contact</h2>
				<div class="mb-1 pl-1">
					<small>Important : tous les champs sont requis afin de nous contacter.</small>
				</div>
				{% include "layouts/includes/flash_messages.html.twig" %}
				<div class="form-row">
					<div class="form-group col-md-6">
						{{ form_row(form_contact.lastName, {'label':"Votre Nom :", 'class':"form-control"}) }}
					</div>
					<div class="form-group col-md-6">
						{{ form_row(form_contact.firstName, {'label':"Votre Prénom :", 'class':"form-control"}) }}
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						{{ form_row(form_contact.email, {'label':"Votre email :", 'class':"form-control"}) }}
					</div>
					<div class="form-group col-md-6">
						{{ form_row(form_contact.phone, {'label':"Votre numéro de téléphone :", 'class':"form-control"}) }}
					</div>
				</div>
				{{ form_row(form_contact.message, {'label':"Votre message :", 'class':"form-control",'attr': {'rows': '8'}}) }}
				<div class="form-row justify-content-end">
					<input type="submit" class="btn btn-primary" value="Envoyer">
				</div>
				{{ form_end(form_contact) }}
			</div>
		</div>
	</div>
{% endblock %}
