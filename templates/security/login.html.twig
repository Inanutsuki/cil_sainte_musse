{% extends 'base.html.twig' %}

{# {% form_theme formArticle 'bootstrap_4_layout.html.twig' %} #}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="row d-flex flex-column align-items-center">
		<div class="form col-md-6">
			<h1>Formulaire de connexion</h1>
			<form method="POST">
				<div class="form-group">
					<label for="inputEmail">Votre email :</label>
					<input type="email" class="form-control" id="inputEmail" name="inputEmail" aria-describedby="emailHelp" placeholder="Entrer votre email" value="{{ app.session.get(constant('App\\Controller\\SecurityController::LAST_EMAIL')) }}" required autofocus>
				</div>
				<div class="form-group">
					<label for="inputPassword">Votre mot de passe :</label>
					<input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Mot de passe" required>
				</div>
				<input type="hidden" id="csrf_token" name="csrf_token" value="{{ csrf_token('login_form') }}">

				{% include "layouts/includes/flash_messages.html.twig" %}

				<div class="form-row justify-content-between">
					<div class="form-check">
						<input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
						<label class="form-check-label" for="remember_me">Se souvenir de moi</label>
					</div>
					<a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
				</div>
				<button type="submit" class="btn btn-primary mt-2">Envoyer</button>

			</form>
		</div>
	</div>


{% endblock %}
