{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<h1 class="admin-welcome">Bienvenue<br>
		<span class="admin-name">{{app.user.firstName}}</span></h1>

	<div class="row justify-content-center">
		<div class="col-xs-6">
			<a href="{{path('admin_user_index')}}">
				<button class="btn btn-primary btn-admin my-3 mx-3" data-toggle="tooltip" data-placement="right" title="Affiche la liste des utilisateurs">
