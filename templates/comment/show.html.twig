{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ comment.author }}</td>
            </tr>
            <tr>
                <th>Contenue</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Créer le</th>
                <td>{{ comment.ceatedAt ? comment.ceatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">Retour à la liste</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Editer</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
